@model IEnumerable<TravelAgency.Models.Vocation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm()) {
    <p class="container row">
        <input type="search" class="form-control col-3 m-2 p-1" name="SearchString" placeholder="Искать...">
        <button type="submit" class="btn btn-primary form-control col-auto m-2" style="width: 50px">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
            </svg>
        </button>
    </p>
}
<div class="row">
    <a asp-action="Statistics" class="btn btn-info col-6">Прошлые записи</a><br>
    <a asp-action="TourRating" class="btn btn-info col-6">Рейтинг туров</a><br>
</div>
<br>
<div class="row">
    <a asp-action="PriseList" class="btn btn-info col-3">Прайс-лист</a><br>
    <a asp-action="OperatorRating" class="btn btn-info col-3">Рейтинг операторов</a><br>
    <a asp-action="CustomerRating" class="btn btn-info col-3">Рейтинг пользователей</a><br>
    <a asp-action="CountryRating" class="btn btn-info col-3">Рейтинг стран</a><br>
</div>
<div class="row">
    <a asp-action="GoalStats" class="btn btn-info col-3">Цели поездки</a><br>
</div>
<table class="table">
    <thead>
    <tr>
        <th>
            <a asp-action="Index" asp-route-order="0">ID</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-order="5">@Html.DisplayNameFor(model => model.Customer)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-order="1">@Html.DisplayNameFor(model => model.BeginDateTime)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-order="2">@Html.DisplayNameFor(model => model.DaysCount)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-order="3">@Html.DisplayNameFor(model => model.Tour)</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-order="4">@Html.DisplayNameFor(model => model.Operator)</a>
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VocationId)
            </td>
            <td>
                <a>@item.Customer.LastName @item.Customer.FirstName @item.Customer.FatherName</a>
            </td>
            <td>
                @item.BeginDateTime.ToString("dd-MMM-yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DaysCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tour.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Operator.LastName)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.VocationId">Edit</a>
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.VocationId">Details</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.VocationId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>