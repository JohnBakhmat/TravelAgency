@model Tour
@using TravelAgency.Models.Enums
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tour</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control"/>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelId" class="control-label"></label>
                <select asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="OneDayCost" class="control-label"></label>
                <input asp-for="OneDayCost" class="form-control"/>
                <span asp-validation-for="OneDayCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportCost" class="control-label"></label>
                <input asp-for="TransportCost" class="form-control"/>
                <span asp-validation-for="TransportCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisaCost" class="control-label"></label>
                <input asp-for="VisaCost" class="form-control"/>
                <span asp-validation-for="VisaCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisaGoal" class="control-label"></label>
                <select asp-for="VisaGoal" class="form-control" asp-items="Html.GetEnumSelectList<VisaGoals>()"></select>
                <span asp-validation-for="VisaGoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control"/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}