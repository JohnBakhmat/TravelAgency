@model IEnumerable<TravelAgency.Models.Customer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <p class="container row">
        <input type="search" class="form-control col-3 m-2 p-1" name="SearchString" placeholder="Искать...">
        <button type="submit" class="btn btn-primary form-control col-auto m-2" style="width: 50px">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z"/>
                <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z"/>
            </svg></button>
    </p>
}
<div class="row">
    <a asp-action="DaysSpent" class="btn btn-info col-6">Денег потрачено</a><br>
    <a asp-action="MoneySpent" class="btn btn-info col-6">Дней потрачено</a><br>
</div>
<table class="table">
    <thead >
        <tr>
            <th>
                <a asp-action="Index" asp-route-order="1">@Html.DisplayNameFor(model => model.LastName)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-order="2">@Html.DisplayNameFor(model => model.FirstName)</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-order="3">@Html.DisplayNameFor(model => model.FatherName)</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-order="4">@Html.DisplayNameFor(model => model.BirthDate)</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-order="5">@Html.DisplayNameFor(model => model.PassportCode)</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-order="6">@Html.DisplayNameFor(model => model.Address)</a>
                
            </th>
            <th>
                <a asp-action="Index" asp-route-order="7">@Html.DisplayNameFor(model => model.Phone)</a>
                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FatherName)
            </td>
            <td>
                @item.BirthDate.Date.ToString("dd-MMM-yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassportCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
